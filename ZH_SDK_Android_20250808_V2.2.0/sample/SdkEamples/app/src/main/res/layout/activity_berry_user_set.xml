<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnGetLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/s120" />

            <Spinner
                android:id="@+id/spinnerLan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnSetLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/s119" />

            <EditText
                android:id="@+id/etLanguageId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/s257"
                android:inputType="phone"
                android:text="104" />

            <Button
                android:id="@+id/btnSetLanguage2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/s257" />

            <include layout="@layout/line"/>

            <CheckBox
                android:id="@+id/chbDistanceUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/s122" />

            <include layout="@layout/line"/>

            <CheckBox
                android:id="@+id/chbTemperatureUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/s123" />

            <include layout="@layout/line"/>

            <Button
                android:id="@+id/btnSetUserProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/s124"
                android:textAllCaps="false" />

            <include layout="@layout/line"/>

            <Button
                android:id="@+id/btnGetUserProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/s461"
                android:textAllCaps="false" />

            <include layout="@layout/line"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>