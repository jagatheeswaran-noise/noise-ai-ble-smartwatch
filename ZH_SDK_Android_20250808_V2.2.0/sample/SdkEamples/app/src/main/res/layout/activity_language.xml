<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            >

            <TextView
                style="@style/MyTextView"
                android:text="@string/s254"
                android:textColor="@color/purple_700"
                />

            <TextView
                android:id="@+id/tvStatus"
                style="@style/MyTextView"
                android:text="@string/s255"
                />

            <Button
                android:id="@+id/btnGet"
                style="@style/MyButton"
                android:layout_width="match_parent"
                android:background="#aa00ff"
                android:text="@string/s120"
                />

            <Spinner
                android:id="@+id/spinnerLan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/btnSet"
                android:enabled="false"
                style="@style/MyButton"
                android:layout_width="match_parent"
                android:background="#aa00ff"
                android:text="@string/s119"
                />

            <EditText
                android:id="@+id/etLanguageId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:hint="@string/s257"
                android:inputType="phone"
                android:text="104"
                />

            <Button
                android:id="@+id/btnSet2"
                style="@style/MyButton"
                android:layout_width="match_parent"
                android:background="#aa00ff"
                android:text="@string/s257"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>