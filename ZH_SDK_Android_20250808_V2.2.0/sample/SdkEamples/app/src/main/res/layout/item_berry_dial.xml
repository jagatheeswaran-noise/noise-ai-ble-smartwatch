<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#899"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDialId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ivImg"
        app:layout_constraintTop_toTopOf="@id/ivImg"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="ID"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDialName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvDialId"
        app:layout_constraintStart_toStartOf="@id/tvDialId"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Name"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDialType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvDialName"
        app:layout_constraintStart_toStartOf="@id/tvDialName"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Type"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/s596"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivImg" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/s597"
        app:layout_constraintBottom_toBottomOf="@+id/ivImg"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/ivImg"
        android:layout_marginTop="10dp"
        android:background="#999"
        />

</androidx.constraintlayout.widget.ConstraintLayout>