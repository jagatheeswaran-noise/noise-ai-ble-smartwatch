<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:colorRoundAttr="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="2dp">

            <com.zjw.sdkdemo.function.diydial.ColorRoundView
                android:id="@+id/colorRoundView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                colorRoundAttr:bgColor="@android:color/white"
                colorRoundAttr:ringColor="#dddddd" />

            <ImageView
                android:id="@+id/ivColorBg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
