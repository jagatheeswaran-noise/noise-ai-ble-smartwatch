<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/s19"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/s20"
                android:textColor="#ff0000"
                android:textSize="16sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="uploadWatch"
                android:text="@string/s85"
                android:textAllCaps="false" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/s21"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:onClick="photoDial"
                android:text="@string/s22"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/s23"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="getWatchList"
                android:text="@string/s24"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/tvDeviceWatchList"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scrollbarFadeDuration="200"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbars="vertical"
                android:textIsSelectable="true"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="@string/s25" />

                <EditText
                    android:id="@+id/etDeviceWatchID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center" />
            </LinearLayout>

            <Button
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:onClick="setDeviceWatchFromId"
                android:text="@string/s84"
                android:textSize="20sp" />

            <Button
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:onClick="deleteDeviceWatchFromId"
                android:text="@string/s26"
                android:textSize="20sp" />
        </LinearLayout>


    </LinearLayout>


</androidx.core.widget.NestedScrollView>

