<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--发送最新天气-->
            <Button
                android:id="@+id/btnLatestWeather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/s615"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnForecastWeatherByDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/s616"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnForecastWeatherByHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/s617"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnSendPressure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/s621"
                android:textAllCaps="false" />


            <Button
                android:id="@+id/btnWeatherTest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/s640"
                android:textAllCaps="false" />



        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>